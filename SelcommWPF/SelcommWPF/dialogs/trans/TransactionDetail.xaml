                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Label Content="{Binding AdjustedAmountText}" HorizontalContentAlignment="Right" Width="80"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding From}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.From}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding To}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.To}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding Sign}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Sign}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding Comment}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Comment}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding Control}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Control}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn>
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Adjusted_Daily_Amount}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Label Content="{Binding AdjustedDailyAmountText}" HorizontalContentAlignment="Right" Width="80"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding ServiceTypeCode}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Service_Type_Code}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding ServiceReference}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Service_Reference}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding ServiceId}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Service_Id}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding Created}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Created}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding CreatedBy}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Created_By}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </TabItem>
                    <TabItem Header="{x:Static p:Resources.Events}">
                        <ListView x:Name="ListEvent">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn DisplayMemberBinding="{Binding Id}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Id}" FontWeight="Bold"  Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding Description}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Description}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding Created}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Created}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding CreatedBy}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Created_By}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </TabItem>
                    <TabItem Header="{x:Static p:Resources.Pay_Request}">
                        <ListView x:Name="ListPayRequest">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn DisplayMemberBinding="{Binding Id}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Id}" FontWeight="Bold"  Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding TypeId}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Type_Id}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding SourceId}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Source_Id}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn>
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Amount}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Label Content="{Binding AmountText}" HorizontalContentAlignment="Right" Width="80"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn>
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Tax_Amount}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Label Content="{Binding TaxAmountText}" HorizontalContentAlignment="Right" Width="80"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding ProviderId}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Provider_Id}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding Provider}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Provider}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding Date}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Date}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding Status}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Status}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding ReasonId}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Reason_Id}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding Reason}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Reason}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding SettlementDate}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Settlement_Date}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </TabItem>
                    <TabItem Header="{x:Static p:Resources.External_Transactions}">
                        <ListView x:Name="ListExternal">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn DisplayMemberBinding="{Binding Id}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Id}" FontWeight="Bold"  Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding StatusId}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Status_Id}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding Status}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Status}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn>
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Amount}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Label Content="{Binding AmountText}" HorizontalContentAlignment="Right" Width="80"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding Reference}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Reference}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding DebtorCode}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Debtor_Code}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding OriginalReference}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Original_Reference}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding OriginalDate}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Original_Date}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding PayerID}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Payer_ID}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding SettlementDate}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Settlement_Date}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding AdditionalInformation}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Additional_Information}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding Created}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Created}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding CreatedBy}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Created_By}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding Updated}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Updated}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding UpdatedBy}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{x:Static p:Resources.Updated_By}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </TabItem>
                </TabControl>
                <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center" Margin="5">
                    <Button Content="{x:Static p:Resources.Close}" Width="130" Style="{StaticResource MaterialDesignPaperLightButton}" 
                            Margin="10,5" Click="ButtonClose_Click"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
        <materialDesign:DialogHost HorizontalAlignment="Center" VerticalAlignment="Center" Identifier="DetailDialog">
            <materialDesign:DialogHost.DialogContent>
                <StackPanel />
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>
        <Grid x:Name="LoadingPanel" Background="#77000000" Visibility="Hidden">
            <ctr:CircularProgressBar x:Name="progressBar" HorizontalAlignment="Center" VerticalAlignment="Center" Height="45" />
        </Grid>
    </Grid>
</UserControl>
