<UserControl x:Class="SelcommWPF.dialogs.accounts.NewAccountDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ctr="clr-namespace:SelcommWPF.controls"
             xmlns:p="clr-namespace:SelcommWPF.Properties"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <Style x:Key="ChargesItemStyle" TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource MaterialDesignGridViewItem}">
            <EventSetter Event="MouseDoubleClick" Handler="ListItemCharges_DoubleClick" />
        </Style>
        <Style x:Key="AttributeItemStyle" TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource MaterialDesignGridViewItem}">
            <EventSetter Event="MouseDoubleClick" Handler="ListItemAttributes_DoubleClick" />
        </Style>
        <Style x:Key="IDItemStyle" TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource MaterialDesignGridViewItem}">
            <EventSetter Event="MouseDoubleClick" Handler="ListItemID_DoubleClick" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <materialDesign:Card Width="1000" Height="850" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label x:Name="LabelDialogTitle" Content="{x:Static p:Resources.New_Account}" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Grid.Row="0" Margin="10"/>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TreeView Grid.Column="0" Width="150" Margin="10">
                            <TreeViewItem Header="Hello">
                            </TreeViewItem>
                            <TreeViewItem Header="Hello">
                                <TreeViewItem Header="Hello">
                                    <TreeViewItem Header="Hello">
                                    </TreeViewItem>
                                </TreeViewItem>
                                <TreeViewItem Header="Hello">
                                </TreeViewItem>
                            </TreeViewItem>
                            <TreeViewItem Header="Hello">
                            </TreeViewItem>
                            <TreeViewItem Header="Hello">
                            </TreeViewItem>
                        </TreeView>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TextMenuCaption" FontSize="16" Grid.Column="0" Grid.Row="0" materialDesign:HintAssist.Hint="{x:Static p:Resources.Menu_Caption}" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10"/>
                            <TextBox x:Name="TextImageURL" FontSize="16" Grid.Column="1" Grid.Row="0" materialDesign:HintAssist.Hint="{x:Static p:Resources.Image_URL}" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10"/>
                            <TextBox x:Name="TextTooltip" FontSize="16" Grid.Column="0" Grid.Row="1" materialDesign:HintAssist.Hint="{x:Static p:Resources.Tooltip}" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10"/>
                            <TextBox x:Name="TextMenuOrder" FontSize="16" Grid.Column="1" Grid.Row="1" materialDesign:HintAssist.Hint="{x:Static p:Resources.Order}" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10"/>
                            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" Margin="10">
                                <ToggleButton x:Name="ToggleChecked"/>
                                <Label Content="{x:Static p:Resources.Checked}" FontSize="16"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Margin="10">
                                <ToggleButton x:Name="ToggleDefault"/>
                                <Label Content="{x:Static p:Resources.Default}" FontSize="16"/>
                            </StackPanel>
                            <TextBox x:Name="TextMenuItemGroup" FontSize="16" Grid.Column="0" Grid.Row="3" materialDesign:HintAssist.Hint="{x:Static p:Resources.Menu_Item_Group}" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10"/>
                            <TextBox x:Name="TextMenuColor" FontSize="16" Grid.Column="1" Grid.Row="3" materialDesign:HintAssist.Hint="{x:Static p:Resources.Color}" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10" IsReadOnly="True"/>
                            <TextBox x:Name="TextNavigationURL" FontSize="16" Grid.Column="0" Grid.Row="4" materialDesign:HintAssist.Hint="{x:Static p:Resources.Navigation_URL}" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10"/>
                            <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Center" Margin="10">
                                <Button Content="{x:Static p:Resources.Add}" Width="100" Style="{StaticResource MaterialDesignPaperLightButton}" Margin="5"/>
                                <Button Content="{x:Static p:Resources.Remove}" Width="100" Style="{StaticResource MaterialDesignPaperLightButton}" Margin="5"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10" Visibility="Collapsed">
                        <CheckBox Content="{x:Static p:Resources.Name}" FontSize="16" VerticalContentAlignment="Bottom" IsChecked="True" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"/>
                        <CheckBox Content="{x:Static p:Resources.Options}" FontSize="16" VerticalContentAlignment="Bottom" Margin="15,0,0,0" IsChecked="True" Checked="CheckBox_Checked" 
                                  Unchecked="CheckBox_Checked"/>
                        <CheckBox Content="{x:Static p:Resources.Address}" FontSize="16" VerticalContentAlignment="Bottom" Margin="15,0,0,0" IsChecked="True" Checked="CheckBox_Checked" 
                                  Unchecked="CheckBox_Checked"/>
                        <CheckBox Content="{x:Static p:Resources.Identification}" FontSize="16" VerticalContentAlignment="Bottom" Margin="15,0,0,0" IsChecked="True" Checked="CheckBox_Checked" 
                                  Unchecked="CheckBox_Checked"/>
                        <CheckBox Content="{x:Static p:Resources.Plans}" FontSize="16" VerticalContentAlignment="Bottom" Margin="15,0,0,0" IsChecked="True" Checked="CheckBox_Checked" 
                                  Unchecked="CheckBox_Checked"/>
                        <CheckBox Content="{x:Static p:Resources.Contracts}" FontSize="16" VerticalContentAlignment="Bottom" Margin="15,0,0,0" IsChecked="True" Checked="CheckBox_Checked" 
                                  Unchecked="CheckBox_Checked"/>
                        <CheckBox Content="{x:Static p:Resources.Contacts}" FontSize="16" VerticalContentAlignment="Bottom" Margin="15,0,0,0" IsChecked="True" Checked="CheckBox_Checked" 
                                  Unchecked="CheckBox_Checked"/>
                        <CheckBox Content="{x:Static p:Resources.Sites}" FontSize="16" VerticalContentAlignment="Bottom" Margin="15,0,0,0" IsChecked="True" Checked="CheckBox_Checked" 
                                  Unchecked="CheckBox_Checked"/>
                        <CheckBox Content="{x:Static p:Resources.Attibutes}" FontSize="16" VerticalContentAlignment="Bottom" Margin="15,0,0,0" IsChecked="True" Checked="CheckBox_Checked" 
                                  Unchecked="CheckBox_Checked"/>
                        <CheckBox Content="{x:Static p:Resources.Charegs}" FontSize="16" VerticalContentAlignment="Bottom" Margin="15,0,0,0" IsChecked="True" Checked="CheckBox_Checked" 
                                  Unchecked="CheckBox_Checked"/>
                    </StackPanel>
                    <TabControl x:Name="TabAccountComponents" Grid.Row="2" materialDesign:ColorZoneAssist.Mode="Standard" materialDesign:ElevationAssist.Elevation="Dp0" 
                                Style="{StaticResource MaterialDesignNavigationRailTabControl}" Background="White" SelectionChanged="TabAccountComponents_SelectionChanged">
                        <TabItem Header="{x:Static p:Resources.Details}" Width="100" >
                            <ScrollViewer x:Name="ScrollViewMain">
                                <StackPanel Orientation="Vertical" Margin="10">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <ComboBox x:Name="ComboAccountType" FontSize="16" Grid.Column="0" Grid.Row="0" materialDesign:HintAssist.Hint="{x:Static p:Resources.Account_Type}" 
                                                  Margin="10" materialDesign:HintAssist.IsFloating="True" SelectionChanged="ComboAccountType_SelectionChanged"/>
                                        <TextBox x:Name="TextAccountId" FontSize="16" Grid.Column="0" Grid.Row="1" materialDesign:HintAssist.Hint="{x:Static p:Resources.Account_Id}" 
                                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10" Visibility="Hidden"/>
                                        <ComboBox x:Name="ComboBusinessUnit" materialDesign:HintAssist.IsFloating="True" Grid.Column="1" Grid.Row="0" FontSize="16" 
                                                  materialDesign:HintAssist.Hint="{x:Static p:Resources1.Bussiness_Unit1}" Margin="10" Visibility="Hidden"/>
                                        <Grid x:Name="GridFirst" Grid.Column="1" Grid.Row="1" Visibility="Hidden">
                                            <TextBox x:Name="TextCoroprationName" FontSize="16" materialDesign:HintAssist.Hint="{x:Static p:Resources.Name}"  
                                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10"/>
                                            <ComboBox x:Name="ComboNameTitles" FontSize="16" Grid.Column="0" Grid.Row="0" materialDesign:HintAssist.Hint="{x:Static p:Resources.Title1}"  
                                                      Margin="10" materialDesign:HintAssist.IsFloating="True" Visibility="Collapsed"/>
                                        </Grid>
                                        <Grid x:Name="GridSecond" Grid.Column="0" Grid.Row="2" Visibility="Hidden">
                                            <TextBox x:Name="TextCorporationNumber" FontSize="16" materialDesign:HintAssist.Hint="{x:Static p:Resources.Corporation_Number}" 
                                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10"/>
                                            <TextBox x:Name="TextFirstName" FontSize="16" materialDesign:HintAssist.Hint="{x:Static p:Resources.First_Name1}"  
                                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10" Visibility="Collapsed"/>
                                        </Grid>
                                        <TextBox x:Name="TextFamilyName" FontSize="16" materialDesign:HintAssist.Hint="{x:Static p:Resources.Family_Name1}" Grid.Row="2" Grid.Column="1"
                                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10" Visibility="Hidden"/>
                                    </Grid>
                                    <Border x:Name="BorderEmail" Visibility="Hidden">
                                        <StackPanel Orientation="Vertical">
                                            <Grid>
                                                <Label Content="{x:Static p:Resources.Emails}" FontSize="16" FontWeight="SemiBold" Margin="10"/>
                                                <Button Style="{StaticResource MaterialDesignPaperLightButton}" Grid.Row="0" HorizontalAlignment="Right" Margin="10" Click="ButtonEmailAdd_Click">
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                                                        <Label Content="{x:Static p:Resources.Add_Email}" Padding="0" Margin="10,0,0,0"/>
                                                    </StackPanel>
                                                </Button>
                                            </Grid>
                                            <StackPanel x:Name="PanelEmails" Orientation="Vertical" MinHeight="50" Margin="10"/>
                                        </StackPanel>
                                    </Border>
                                    <Border x:Name="BorderPhone" Visibility="Hidden">
                                        <StackPanel Orientation="Vertical">
                                            <Grid>
                                                <Label Content="{x:Static p:Resources.Contact_Phone}" FontSize="16" FontWeight="SemiBold" Margin="10"/>
                                                <Button Style="{StaticResource MaterialDesignPaperLightButton}" Grid.Row="0" HorizontalAlignment="Right" Margin="10" Click="ButtonPhoneAdd_Click">
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                                                        <Label Content="{x:Static p:Resources.Add_Phone}" Padding="0" Margin="10,0,0,0"/>
                                                    </StackPanel>
                                                </Button>
                                            </Grid>
                                            <StackPanel x:Name="PanelPhones" Orientation="Vertical" MinHeight="50" Margin="10"/>
                                        </StackPanel>
                                    </Border>
                                    <Border x:Name="BorderAddress" Visibility="Hidden">
                                        <StackPanel Orientation="Vertical">
                                            <Grid>
                                                <Label Content="{x:Static p:Resources.Address}" FontSize="16" FontWeight="SemiBold" Margin="10"/>
                                                <Button Style="{StaticResource MaterialDesignPaperLightButton}" Grid.Row="0" HorizontalAlignment="Right" Margin="10" Click="ButtonAddressAdd_Click">
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                                                        <Label Content="{x:Static p:Resources.Add_Address}" Padding="0" Margin="10,0,0,0"/>
                                                    </StackPanel>
                                                </Button>
                                            </Grid>
                                            <StackPanel x:Name="PanelAddress" Orientation="Vertical" MinHeight="50" Margin="10"/>
                                        </StackPanel>
                                    </Border>
                                    <Border x:Name="BorderContact" Visibility="Hidden">
                                        <StackPanel Orientation="Vertical">
                                            <Grid>
                                                <Label Content="{x:Static p:Resources.Related_Contact}" FontSize="16" FontWeight="SemiBold" Margin="10"/>
                                                <Button Style="{StaticResource MaterialDesignPaperLightButton}" Grid.Row="0" HorizontalAlignment="Right" Margin="10" Click="ButtonContactAdd_Click">
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                                                        <Label Content="{x:Static p:Resources.Add_Contact}" Padding="0" Margin="10,0,0,0"/>
                                                    </StackPanel>
                                                </Button> 
                                            </Grid>
                                            <StackPanel x:Name="PanelContact" Orientation="Vertical" MinHeight="50" Margin="10"/>
                                        </StackPanel>
                                    </Border>
                                    <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="10">
                                        <Button x:Name="ButtonNext" Width="100" Style="{StaticResource MaterialDesignPaperLightButton}" Margin="5" Click="ButtonNext_Click" Tag="0"
                                                Visibility="Hidden">
                                            <StackPanel Orientation="Horizontal">
                                                <Label Content="{x:Static p:Resources.Next}" Padding="0"/>
                                                <materialDesign:PackIcon Kind="ChevronRight" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="{x:Static p:Resources.Options}" Width="100" Visibility="Collapsed">
                            <Grid>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox x:Name="ComboBillingCycle" FontSize="16" Grid.Column="0" Grid.Row="0" materialDesign:HintAssist.Hint="{x:Static p:Resources.Billing_Cycle}" 
                                     Margin="10" materialDesign:HintAssist.IsFloating="True"/>
                                    <ComboBox x:Name="ComboCurrency" FontSize="16" Grid.Column="1" Grid.Row="0" materialDesign:HintAssist.Hint="{x:Static p:Resources.Currency}" 
                                     Margin="10" materialDesign:HintAssist.IsFloating="True"/>
                                    <ComboBox x:Name="ComboTaxRate" FontSize="16" Grid.Column="0" Grid.Row="1" materialDesign:HintAssist.Hint="{x:Static p:Resources.Tax_Rate}" 
                                     Margin="10" materialDesign:HintAssist.IsFloating="True"/>
                                    <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1" Margin="10">
                                        <TextBox x:Name="TextTimeZone" FontSize="16" materialDesign:HintAssist.Hint="{x:Static p:Resources.Time_Zone}" materialDesign:HintAssist.IsFloating="True"
                                             KeyUp="TextTimeZone_KeyUp"/>
                                        <ProgressBar x:Name="ProgressTimeZone" IsIndeterminate="True" Visibility="Collapsed"/>
                                    </StackPanel>
                                    <TextBox x:Name="TextCreditLimit" FontSize="16" materialDesign:HintAssist.Hint="{x:Static p:Resources.Credit_Limit}" Grid.Row="2" Grid.Column="0"
                                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10" TextChanged="TextCreditLimit_TextChanged"
                                             PreviewTextInput="TextCreditLimit_PreviewTextInput"/>
                                    <ComboBox x:Name="ComboCreditTerms" FontSize="16" materialDesign:HintAssist.Hint="{x:Static p:Resources.Credit_Terms}" Grid.Row="2" Grid.Column="1" 
                                              materialDesign:HintAssist.IsFloating="True" Margin="10"/>
                                    <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" Margin="10">
                                        <Button Width="100" Style="{StaticResource MaterialDesignPaperLightButton}" Margin="5" Click="ButtonPrev_Click" Tag="1">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="ChevronLeft" VerticalAlignment="Center"/>
                                                <Label Content="{x:Static p:Resources.Prev}" Padding="0"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Width="100" Style="{StaticResource MaterialDesignPaperLightButton}" Margin="5" Click="ButtonNext_Click" Tag="1">
                                            <StackPanel Orientation="Horizontal">
                                                <Label Content="{x:Static p:Resources.Next}" Padding="0"/>
                                                <materialDesign:PackIcon Kind="ChevronRight" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                                <materialDesign:Card x:Name="CardTimeZone" HorizontalAlignment="Right" Width="390" Margin="0,125,10,0" MaxHeight="150" VerticalAlignment="Top" Visibility="Collapsed">
                                    <ListView x:Name="ListTimeZone" KeyUp="ListTimeZone_KeyUp" MouseUp="ListTimeZone_MouseUp" FontSize="16" MaxHeight="150"/>
                                </materialDesign:Card>
                            </Grid>
                        </TabItem>
                        <TabItem Header="{x:Static p:Resources.Identification}" Width="100" Visibility="Collapsed">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Label x:Name="LabelPoints" FontSize="16" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                                <ListView x:Name="ListIdetification" Grid.Row="0" MinHeight="100" Margin="10,40,10,10" ItemContainerStyle="{StaticResource IDItemStyle}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn DisplayMemberBinding="{Binding Id}">
                                                <GridViewColumn.Header>
                                                    <GridViewColumnHeader Content="{x:Static p:Resources.Id}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn.Header>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding Name}">
                                                <GridViewColumn.Header>
                                                    <GridViewColumnHeader Content="{x:Static p:Resources.Name}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn.Header>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding Value}">
                                                <GridViewColumn.Header>
                                                    <GridViewColumnHeader Content="{x:Static p:Resources.Value}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn.Header>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding Points}">
                                                <GridViewColumn.Header>
                                                    <GridViewColumnHeader Content="{x:Static p:Resources.Points}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn.Header>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding ExpiryDate}">
                                                <GridViewColumn.Header>
                                                    <GridViewColumnHeader Content="{x:Static p:Resources.Expiry_Date}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn.Header>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding IssueDate}">
                                                <GridViewColumn.Header>
                                                    <GridViewColumnHeader Content="{x:Static p:Resources.Issue_Date}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn.Header>
                                            </GridViewColumn>
                                            <GridViewColumn>
                                                <GridViewColumn.Header>
                                                    <GridViewColumnHeader Content="*" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn.Header>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Button Content="{materialDesign:PackIcon Kind=Edit}" Style="{StaticResource MaterialDesignPaperLightButton}" Padding="10,0"
                                                                Click="ButtonIDEdit_Click" Tag="{Binding Id}"/>
                                                            <Button Content="{materialDesign:PackIcon Kind=Delete}" Margin="10,0,0,0" Style="{StaticResource MaterialDesignPaperLightButton}" 
                                                                Padding="10,0" Click="ButtonIDDelete_Click"  Tag="{Binding Id}"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <Button Style="{StaticResource MaterialDesignPaperLightButton}" Grid.Row="0" VerticalAlignment="Top" Margin="10,40,10,10" HorizontalAlignment="Right" 
                                        Click="ButtonIDAdd_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                                        <Label Content="{x:Static p:Resources.Add_Identification}" Padding="0" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Button>
                                <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="10">
                                    <Button Width="100" Style="{StaticResource MaterialDesignPaperLightButton}" Margin="5" Click="ButtonPrev_Click" Tag="2">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="ChevronLeft" VerticalAlignment="Center"/>
                                            <Label Content="{x:Static p:Resources.Prev}" Padding="0"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Width="100" Style="{StaticResource MaterialDesignPaperLightButton}" Margin="5" Click="ButtonNext_Click" Tag="2">
                                        <StackPanel Orientation="Horizontal">
                                            <Label Content="{x:Static p:Resources.Next}" Padding="0"/>
                                            <materialDesign:PackIcon Kind="ChevronRight" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                        <TabItem Header="{x:Static p:Resources.Attibutes}" Width="100" Visibility="Collapsed">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <ListView x:Name="ListUserDefined" Grid.Row="0" MinHeight="100" Margin="10,10,10,10" ItemContainerStyle="{StaticResource AttributeItemStyle}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn DisplayMemberBinding="{Binding Id}">
                                                <GridViewColumn.Header>
                                                    <GridViewColumnHeader Content="{x:Static p:Resources.Id}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn.Header>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding Name}" Width="300">
                                                <GridViewColumn.Header>
                                                    <GridViewColumnHeader Content="{x:Static p:Resources.Name}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn.Header>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding Value}">
                                                <GridViewColumn.Header>
                                                    <GridViewColumnHeader Content="{x:Static p:Resources.Value}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn.Header>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding Order}">
                                                <GridViewColumn.Header>
                                                    <GridViewColumnHeader Content="{x:Static p:Resources.Order}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn.Header>
                                            </GridViewColumn>
                                            <GridViewColumn>
                                                <GridViewColumn.Header>
                                                    <GridViewColumnHeader Content="*" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn.Header>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Button Content="{materialDesign:PackIcon Kind=Edit}" Style="{StaticResource MaterialDesignPaperLightButton}" Padding="10,0"
                                                                    Click="ButtonAttributesUpdate_Click" Tag="{Binding Id}"/>
                                                            <Button Content="{materialDesign:PackIcon Kind=Delete}" Margin="10,0,0,0" Style="{StaticResource MaterialDesignPaperLightButton}" 
                                                                    Padding="10,0" Click="ButtonAttributesDelete_Click"  Tag="{Binding Id}"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                </ListView >
                                <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Top">
                                    <Button Style="{StaticResource MaterialDesignPaperLightButton}" Click="ButtonAttributesAdd_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                                            <Label Content="{x:Static p:Resources.Add_User_Defined}" Padding="0"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Margin="10">
                                    <Button Width="100" Style="{StaticResource MaterialDesignPaperLightButton}" Margin="5"  Click="ButtonPrev_Click" Tag="3">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="ChevronLeft" VerticalAlignment="Center"/>
                                            <Label Content="{x:Static p:Resources.Prev}" Padding="0"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Width="100" Style="{StaticResource MaterialDesignPaperLightButton}" Margin="5"  Click="ButtonNext_Click" Tag="3">
                                        <StackPanel Orientation="Horizontal">
                                            <Label Content="{x:Static p:Resources.Next}" Padding="0"/>
                                            <materialDesign:PackIcon Kind="ChevronRight" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                        <TabItem Header="{x:Static p:Resources.Plans}" Width="100" Visibility="Collapsed">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
