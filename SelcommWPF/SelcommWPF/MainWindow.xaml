<Window x:Class="SelcommWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SelcommWPF"
        xmlns:p="clr-namespace:SelcommWPF.Properties"
        xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        xmlns:html="http://schemas.danielsabel.com/tinyhtmlwpf/2020"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:ctr="clr-namespace:SelcommWPF.controls" 
        mc:Ignorable="d"
        Title="{x:Static p:Resources.App_Title}" WindowStyle="SingleBorderWindow" ResizeMode="CanResize" Left="0" Top="0"
        Closing="Windows_Closing" SizeChanged="Window_SizeChanged" LocationChanged="Window_LocationChanged" Width="2000" Height="1000">
    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Padding" Value="5" />
        </Style>
        <Style x:Key="NoteItemStyle" TargetType="{x:Type ListViewItem}">
            <EventSetter Event="MouseDoubleClick" Handler="ListItemNote_DoubleClick" />
        </Style>
        <Style x:Key="TaskItemStyle" TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource MaterialDesignGridViewItem}">
            <EventSetter Event="MouseDoubleClick" Handler="ListItemTask_DoubleClick" />
        </Style>
        <Style x:Key="ItemcontainerStyle" TargetType="MenuItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate  TargetType="{x:Type MenuItem}">
                        <Border x:Name="templateRoot" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <Grid Margin="-1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition MinWidth="22" SharedSizeGroup="MenuItemIconColumnGroup" Width="Auto"/>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition SharedSizeGroup="MenuItemIGTColumnGroup" Width="Auto"/>
                                    <ColumnDefinition Width="20"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter x:Name="Icon" Content="{TemplateBinding Icon}" ContentSource="Icon" HorizontalAlignment="Center" Height="16" Margin="3" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center" Width="16"/>
                                <Border x:Name="GlyphPanel" BorderBrush="#FF26A0DA" BorderThickness="1" Background="#3D26A0DA" ClipToBounds="False" HorizontalAlignment="Center" Height="22" Margin="-1,0,0,0" Visibility="Hidden" VerticalAlignment="Center" Width="22">
                                    <RadioButton x:Name="Glyph" IsChecked="{TemplateBinding IsChecked}" GroupName="a"  VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                                <ContentPresenter x:Name="menuHeaderContainer" ContentTemplate="{TemplateBinding HeaderTemplate}" Content="{TemplateBinding Header}" Grid.Column="2" ContentStringFormat="{TemplateBinding HeaderStringFormat}" ContentSource="Header" HorizontalAlignment="Left" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center"/>
                                <TextBlock x:Name="menuGestureText" Grid.Column="4" Margin="{TemplateBinding Padding}" Opacity="0.7" Text="{TemplateBinding InputGestureText}" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Icon" Value="{x:Null}">
                                <Setter Property="Visibility" TargetName="Icon" Value="Collapsed"/>
                            </Trigger>
                            <Trigger  Property="IsChecked" Value="True">
                                <Setter Property="Visibility" TargetName="GlyphPanel" Value="Visible"/>
                                <Setter Property="Visibility" TargetName="Icon" Value="Collapsed"/>
                            </Trigger>
                            <Trigger SourceName="Glyph"  Property="IsChecked" Value="False">
                                <Setter Property="Visibility" TargetName="GlyphPanel" Value="Hidden"/>
                                <Setter Property="Visibility" TargetName="Glyph" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" TargetName="templateRoot" Value="#3D26A0DA"/>
                                <Setter Property="BorderBrush" TargetName="templateRoot" Value="#FF26A0DA"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="TextElement.Foreground" TargetName="templateRoot" Value="#FF707070"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsHighlighted" Value="True"/>
                                    <Condition Property="IsEnabled" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" TargetName="templateRoot" Value="#0A000000"/>
                                <Setter Property="BorderBrush" TargetName="templateRoot" Value="#21000000"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Menu Grid.Row="0" Height="30">
                <MenuItem Header="{x:Static p:Resources.Menu_File}" Height="30">
                    <MenuItem Header="{x:Static p:Resources.Menu_Exit}" Click="Menu_Exit_Click"/>
                </MenuItem>
                <MenuItem Header="{x:Static p:Resources.New}" Height="30">
                    <MenuItem Header="{x:Static p:Resources.New_Account1}" Click="Menu_Account_Click"/>
                    <MenuItem Header="{x:Static p:Resources.New_Contact}"/>
                    <MenuItem Header="{x:Static p:Resources.New_Prospect}"/>
                    <MenuItem Header="{x:Static p:Resources.Order1}" Click="Menu_Order_Click"/>
                </MenuItem>
                <MenuItem x:Name="MenuAccount" Header="{x:Static p:Resources.Menu_Account}" Height="30" IsEnabled="False"/>
                <MenuItem x:Name="MenuServices" Header="{x:Static p:Resources.Menu_Service}" Height="30" IsEnabled="False"/>
                <MenuItem Header="{x:Static p:Resources.Menu_Utilities}" Height="30">
                    <MenuItem Header="{x:Static p:Resources1.Users}">
                        <MenuItem Header="{x:Static p:Resources1.Service_Provider_User}" Click="Menu_Service_Provider_Users_Click"/>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="{x:Static p:Resources.Menu_View}" Height="30">
                    <MenuItem Header="{x:Static p:Resources.Menu_Services}">
                        <MenuItem x:Name="MenuServiceList" Header="{x:Static p:Resources.Menu_Service_List}" ItemContainerStyle="{StaticResource ItemcontainerStyle}">
                            <MenuItem Header="{x:Static p:Resources.Menu_List}" IsCheckable="True" Checked="Menu_Services_List" IsChecked="True" Tag="List"/>
                            <MenuItem Header="{x:Static p:Resources.Menu_Type}" IsCheckable="True" Checked="Menu_Services_Type" Tag="Type"/>
                            <MenuItem Header="{x:Static p:Resources.Menu_Plans}" IsCheckable="True" Checked="Menu_Services_Type" Tag="Plans"/>
                            <MenuItem Header="{x:Static p:Resources.Menu_Changes}" IsCheckable="True" Checked="Menu_Services_Type" Tag="Changes"/>
                            <MenuItem Header="{x:Static p:Resources.Menu_Status}" IsCheckable="True" Checked="Menu_Services_Type" Tag="Status"/>
                            <MenuItem Header="{x:Static p:Resources.Menu_Cost_Center}" IsCheckable="True" Checked="Menu_Services_Type" Tag="CostCenter"/>
                            <MenuItem Header="{x:Static p:Resources.Menu_Service_Group}" IsCheckable="True" Checked="Menu_Services_Type" Tag="ServiceGroup"/>
                            <MenuItem Header="{x:Static p:Resources.Menu_Sites}" IsCheckable="True" Checked="Menu_Services_Type" Tag="Sites"/>
                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="{x:Static p:Resources.Menu_Appearnace}">
                        <MenuItem x:Name="MenuVScroll" Header="{x:Static p:Resources.Menu_Vertical_Scroll}" IsCheckable="True" IsChecked="False"
                                  Checked="Menu_Vertical_Scroll_Checked" Unchecked="Menu_Vertical_Scroll_Checked"/>
                        <MenuItem Header="{x:Static p:Resources.Menu_Hidden_Grid_Buttons}" IsCheckable="True" IsChecked="False"
                                  Checked="Menu_Hide_Buttons_Checked" Unchecked="Menu_Hide_Buttons_Checked"/>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="{x:Static p:Resources.Menu_Options}" Height="30">
                    <MenuItem Header="{x:Static p:Resources.Reset_Size}" Click="Menu_Reset_Size"/>
                    <MenuItem Header="{x:Static p:Resources.Menu_Security}">
                        <MenuItem Header="{x:Static p:Resources.Change_Password}" Click="Menu_Change_Password"/>
                        <MenuItem Header="{x:Static p:Resources.Login_History}" Click="Menu_Login_History"/>
                        <MenuItem Header="{x:Static p:Resources.Password_Expiry}" Click="Menu_Password_Expiry"/>
                        <MenuItem Header="{x:Static p:Resources.Verify_Security_Details}" Click="Menu_Verify_Security"/>
                        <MenuItem Header="{x:Static p:Resources.Register_Security_Details}" Click="Menu_Register_Details"/>
                    </MenuItem>
                    <MenuItem x:Name="MenuLanguage" Header="{x:Static p:Resources.Select_Language}" ItemContainerStyle="{StaticResource ItemcontainerStyle}">
                        <MenuItem Header="{x:Static p:Resources.English}" IsCheckable="True"  Checked="Menu_Change_Language" Tag="en-US"/>
                        <MenuItem Header="{x:Static p:Resources.Spanish}" IsCheckable="True" Checked="Menu_Change_Language" Tag="es-ES"/>
                        <MenuItem Header="{x:Static p:Resources.Russian}" IsCheckable="True" Checked="Menu_Change_Language" Tag="ru-RU"/>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Report" Click="Menu_Report_Click" Height="30"/>
                <MenuItem Header="{x:Static p:Resources.Menu_Windows}" Height="30">

                </MenuItem>
            </Menu>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="600"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <materialDesign:Card  Grid.Row="0" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Margin="20,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="{x:Static p:Resources.Account_No}" VerticalContentAlignment="Center" Grid.Column="0" FontSize="16"/>
                                <Grid Grid.Column="1">
                                    <TextBox x:Name="TextAccountNo" VerticalContentAlignment="Center" Height="30" Margin="10,0,0,0" FontSize="15" Background="White"
                                          TextChanged="TextAccountNo_TextChanged" KeyDown="TextAccountNo_KeyDown" materialDesign:TextFieldAssist.HasClearButton="True"  
                                          materialDesign:HintAssist.Hint="{x:Static p:Resources.Account_No_Hint}" LostFocus="TextAccountNo_ChangeFocus" 
                                          GotFocus="TextAccountNo_ChangeFocus"/>
                                </Grid>
                                <Button Margin="20,0,0,0" Width="30" Height="30" Cursor="Hand" Padding="5" Click="Button_Account_Refresh" Grid.Column="2" 
                                        Style="{StaticResource MaterialDesignPaperLightButton}" Content="{materialDesign:PackIcon Kind=Refresh}"/>
                                <Button Margin="10,0,0,0" Width="30" Height="30" Cursor="Hand" Padding="4" Click="Button_Account_Search" Grid.Column="3"
                                        Style="{StaticResource MaterialDesignPaperLightButton}"  Content="{materialDesign:PackIcon Kind=Search}" 
                                        VerticalAlignment="Top"/>
                                <Button Margin="10,0,0,0" Width="30" Height="30" Cursor="Hand" Padding="4" Click="Button_Advanced_Search" Grid.Column="4"
                                        Style="{StaticResource MaterialDesignPaperLightButton}"  Content="{materialDesign:PackIcon Kind=ArrowRightThick}" 
                                        VerticalAlignment="Top"/>
                            </Grid>
                            <Grid Grid.Row="1">
                                <ListView x:Name="ListDisplayDetails" ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid MouseRightButtonUp="Grid_MouseRightButtonUp" MouseLeftButtonUp="Grid_MouseLeftButtonUp" Tag="{Binding MenuId}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="200"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Grid.Column="0" Content="{Binding Label}" ToolTip="{Binding Tooltip}"/>
                                                <Label Grid.Column="1" Content="{Binding Value}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListView>
                                <materialDesign:Card x:Name="GridAccountNo" Visibility="Hidden" HorizontalAlignment="Left" VerticalAlignment="Top" 
                                      Margin="122,-10,100,0">
                                    <ListView x:Name="ComboAccountNo" FontSize="16" MaxHeight="200" ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label Content="{Binding}" FontSize="16" MouseDown="Label_MouseDown" Grid.Column="0"/>
                                                    <materialDesign:PackIcon Kind="Close" FontWeight="Bold" Cursor="Hand" VerticalAlignment="Center" Width="20" Height="20"
                                                                             MouseDown="PackIcon_MouseDown" Tag="{Binding}" Grid.Column="1" Margin="5,0,0,0"/>
                                                </Grid>
                                            </DataTemplate> 
                                        </ListBox.ItemTemplate>
                                    </ListView>
                                </materialDesign:Card>
                            </Grid>
                        </Grid>
                    </materialDesign:Card>
                    <GridSplitter Grid.Row="1" ResizeBehavior="PreviousAndNext" HorizontalAlignment="Stretch"  Height="4"/>
                    <materialDesign:Card Grid.Row="2" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Margin="30,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Kind="Magnify" VerticalAlignment="Center" Margin="10" Grid.Column="0"/>
                                <TextBox x:Name="TextServiceSearch" VerticalContentAlignment="Center" FontSize="15" Grid.Column="1"
                                         materialDesign:TextFieldAssist.HasClearButton="True"
                                         materialDesign:HintAssist.Hint="{x:Static p:Resources.Search}"/>
                                <Button Content="{materialDesign:PackIcon Kind=Search}" Height="30" Width="30" Grid.Column="2" Margin="20,0,20,0"
                                            Style="{StaticResource MaterialDesignPaperLightButton}" Padding="0"/>
                            </Grid>
                            <Grid x:Name="GridServices" Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Margin="0,10,0,0">
                                    <ListView x:Name="ListServicesType" SelectionChanged="ListServicesType_SelectionChanged" 
                                               ScrollViewer.ScrollChanged="ListServices_Scroll" Tag="0">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn DisplayMemberBinding="{Binding ServiceType}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.ServiceType}" Padding="5" FontWeight="Bold" HorizontalContentAlignment="Center"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding Count}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.Count}" Padding="5" FontWeight="Bold" HorizontalContentAlignment="Center"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding StatusCountsText}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.Status_Counts}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                    <ListView x:Name="ListServicesPlans" SelectionChanged="ListServicesPlans_SelectionChanged" Visibility="Collapsed"
                                               ScrollViewer.ScrollChanged="ListServices_Scroll" Tag="0">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn DisplayMemberBinding="{Binding Id}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.Id}" Padding="5" FontWeight="Bold" HorizontalContentAlignment="Center"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding Plan}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.Plan}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding Count}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.Count}" Padding="5" FontWeight="Bold" HorizontalContentAlignment="Center"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                    <ListView x:Name="ListServicesChanges" SelectionChanged="ListServicesChanges_SelectionChanged" Visibility="Collapsed"
                                               ScrollViewer.ScrollChanged="ListServices_Scroll" Tag="0">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn DisplayMemberBinding="{Binding ChangeType}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.Change_Type}" Padding="5" FontWeight="Bold" HorizontalContentAlignment="Center"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding From}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.From}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding Count}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.Count}" Padding="5" FontWeight="Bold" HorizontalContentAlignment="Center"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                    <ListView x:Name="ListServicesStatus" SelectionChanged="ListServicesStatus_SelectionChanged" Visibility="Collapsed"
                                               ScrollViewer.ScrollChanged="ListServices_Scroll" Tag="0">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn DisplayMemberBinding="{Binding Id}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.Id}" Padding="5" FontWeight="Bold" HorizontalContentAlignment="Center"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding Status}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.Status}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding Count}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.Count}" Padding="5" FontWeight="Bold" HorizontalContentAlignment="Center"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                    <ListView x:Name="ListServicesCost" SelectionChanged="ListServicesCost_SelectionChanged" Visibility="Collapsed"
                                               ScrollViewer.ScrollChanged="ListServices_Scroll" Tag="0">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn DisplayMemberBinding="{Binding Name}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.Cost_Center}" Padding="5" FontWeight="Bold" 
                                                                              HorizontalContentAlignment="Center"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding Status}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.Status}" FontWeight="Bold" Padding="5" 
                                                                              HorizontalContentAlignment="Center"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding StatusCountsText}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.Status_Counts}" Padding="5" FontWeight="Bold" 
                                                                              HorizontalContentAlignment="Center" Width="220"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                    <ListView x:Name="ListServicesGroup" SelectionChanged="ListServicesGroup_SelectionChanged" Visibility="Collapsed"
                                               ScrollViewer.ScrollChanged="ListServices_Scroll" Tag="0">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn DisplayMemberBinding="{Binding Name}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.Service_Group}" Padding="5" FontWeight="Bold" 
                                                                              HorizontalContentAlignment="Center"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding Status}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.Status}" FontWeight="Bold" Padding="5" 
                                                                              HorizontalContentAlignment="Center"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding StatusCountsText}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.Status_Counts}" Padding="5" FontWeight="Bold" 
                                                                              HorizontalContentAlignment="Center" Width="220"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                    <ListView x:Name="ListServicesSites" SelectionChanged="ListServicesSites_SelectionChanged" Visibility="Collapsed"
                                               ScrollViewer.ScrollChanged="ListServices_Scroll" Tag="0">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn DisplayMemberBinding="{Binding Site}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.Sites}" Padding="5" FontWeight="Bold" 
                                                                              HorizontalContentAlignment="Center"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding Type}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.Type}" FontWeight="Bold" Padding="5" 
                                                                              HorizontalContentAlignment="Center"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding Count}">
                                                    <GridViewColumn.Header>
                                                        <GridViewColumnHeader Content="{x:Static p:Resources.Count}" Padding="5" FontWeight="Bold" 
                                                                              HorizontalContentAlignment="Center" Width="220"/>
                                                    </GridViewColumn.Header>
                                                </GridViewColumn>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </Grid>
                                <ListView x:Name="ListServices" Grid.Row="1" Margin="0,10,0,0" ScrollViewer.ScrollChanged="ListEvents_Scroll" Tag="0" MouseRightButtonUp="ListServices_MouseRightButtonUp" MouseLeftButtonUp="ListServices_MouseLeftButtonUp">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn DisplayMemberBinding="{Binding ServiceId}">
                                                <GridViewColumn.Header>
                                                    <GridViewColumnHeader Content="{x:Static p:Resources.Service}" FontWeight="Bold"  Padding="5" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn.Header>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding ServiceType}">
                                                <GridViewColumn.Header>
                                                    <GridViewColumnHeader Content="{x:Static p:Resources.Type}" FontWeight="Bold"  Padding="5" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn.Header>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding Status}">
                                                <GridViewColumn.Header>
                                                    <GridViewColumnHeader Content="{x:Static p:Resources.Status}" FontWeight="Bold" Padding="5" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn.Header>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </Grid>
                    </materialDesign:Card>
                </Grid>
                <GridSplitter Grid.Column="1" ResizeBehavior="PreviousAndNext" VerticalAlignment="Stretch" Width="4" />
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <materialDesign:Card Margin="5">
                        <TabControl x:Name="TabAccountInfo" Grid.Row="0" HorizontalContentAlignment="Left" materialDesign:ColorZoneAssist.Mode="SecondaryMid"
                                SelectionChanged="TabControl_SelectionChanged">
                            <TabItem Header="{x:Static p:Resources.Notes}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Horizontal" Margin="5">
                                            <materialDesign:PackIcon Kind="Magnify" VerticalAlignment="Center" Margin="10" />
                                            <TextBox x:Name="TextNoteSearch" Width="200" VerticalContentAlignment="Center" FontSize="15"
                                                    materialDesign:TextFieldAssist.HasClearButton="True" TextChanged="TextSearch_TextChanged" 
                                                    materialDesign:HintAssist.Hint="{x:Static p:Resources.Search}"/>
                                        </StackPanel>
                                        <Button Content="{x:Static p:Resources.Add_Note}" Height="30" Width="100" Grid.Column="1" Margin="20,0,20,0"
                                            Style="{StaticResource MaterialDesignPaperLightButton}" Tag="0" Click="Button_Add_Note_Click"/>
                                    </Grid>
                                    <ListView x:Name="ListContactNotes" Grid.Row="1" ScrollViewer.ScrollChanged="ListEvents_Scroll"
                                              ItemContainerStyle="{StaticResource NoteItemStyle}">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="10,5" Tag="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="700"/>
                                                        <ColumnDefinition Width="130"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
